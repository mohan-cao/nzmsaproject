<!doctype html>
<html>
<head>
<meta charset="utf-8">
<title>Untitled Document</title>
<link rel="stylesheet" href="/res/weatherapp.css">
</head>

<body>
<div class="background"></div>
<div class="container">
  <div class="well">
    <div class="row">
      <div class="col-md-12">
        <h1 class="text-center title"><span id="location">Weather app</span></h1>
      </div>
    </div>
    <hr class="styled">
    <div class="loading">
      <div class="row">
        <div class="col-md-12">
          <h4 class="text-center">Loading...</h4>
        </div>
      </div>
    </div>
    <div class="custominput">
      <div class="row">
        <div class="col-md-12">
          <form id="custominput">
            <div class="input-group"> <span class="input-group-addon">Input your current location: </span>
              <input id="locInput" type="text" class="form-control" placeholder="i.e. Auckland, NZ">
              <span class="input-group-btn">
              <button type="submit" class="btn btn-default">Go!</button>
              </span> </div>
          </form>
        </div>
      </div>
    </div>
    <div class="content">
      <div class="row">
        <div class="col-md-12">
          <h3 class="text-center">It is currently <span id="weathertype"></span></h3>
        </div>
      </div>
    </div>
  </div>
</div>
</body>
</html>
